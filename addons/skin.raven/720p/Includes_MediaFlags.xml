        <posy>669</posy>
        <width>90</width>
        <height>59</height>
        <font>Font_Reg21</font>
        <textcolor>dcFFFFFF</textcolor>
        <align>center</align>
        <colordiffuse>floor</colordiffuse>
        <visible>Container.Content(Albums) | Container.Content(Songs)</visible>
